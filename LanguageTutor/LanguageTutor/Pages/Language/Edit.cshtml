@page "{Id:int?}"
@model LanguageTutor.Web.Pages.Language.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Editing @Model.LanguageText.Text</h2>



<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="LanguageText.Id" />

    <div class="form-group">
        <label asp-for="LanguageText.Text"></label>
        <input asp-for="LanguageText.Text" class="form-control" />
        <span class="text-danger" asp-validation-for="LanguageText.Text" />
    </div>


    <div class="form-group">
        <label asp-for="LanguageText.EnglishTranslation"></label>
        <input asp-for="LanguageText.EnglishTranslation" class="form-control" />
        <span class="text-danger" asp-validation-for="LanguageText.EnglishTranslation" />
    </div>

    <div class="form-group">
        <label asp-for="LanguageText.LanguageType"></label>
        <select asp-for="LanguageText.LanguageType" asp-items="Model.Languages" class="form-control"></select>
        @*<span class="text-danger" asp-validation-for="LanguageText.Languages" />*@
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}