@page "{Id:int?}"
@model LanguageTutor.Web.Pages.Language.EditModel
@{
//ViewData["Title"] = "Edit";
}

<h2>@ViewData["Title"]  @Model.LanguageText.Text</h2>



<form method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="LanguageText.Id" />

    <div class="form-group">
        <label asp-for="LanguageText.Text"></label>
        <input asp-for="LanguageText.Text" class="form-control" />
        <span class="text-danger" asp-validation-for="LanguageText.Text" />
    </div>

    <div class="form-group">
        <label asp-for="LanguageText.Pronunciation"></label>
        <input asp-for="LanguageText.Pronunciation" class="form-control" />
        <span class="text-danger" asp-validation-for="LanguageText.Pronunciation" />
    </div>
    <div class="form-group">
        <label asp-for="LanguageText.EnglishTranslation"></label>
        <textarea asp-for="LanguageText.EnglishTranslation" class="form-control" cols="80" rows="5"> </textarea>
        <span class="text-danger" asp-validation-for="LanguageText.EnglishTranslation" />
    </div>



    <div class="form-group">
        <label asp-for="LanguageText.Usecases"></label>

        <textarea asp-for="LanguageText.Usecases" class="form-control" cols="80" rows="5"> </textarea>
        <span class="text-danger" asp-validation-for="LanguageText.Usecases" />
    </div>

    <div class="form-group">
        <label asp-for="LanguageText.LanguageType"></label>
        <select asp-for="LanguageText.LanguageType" asp-items="Model.Languages" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="/Language/ClientLanguages" class="btn btn-primary">Cancel</a>
</form>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}