
@model LanguageTutor.Core.LanguageText
@{
}



<div class="panel panel-default">
    <div class="panel-heading">
        <h3>@Model.Text</h3>
    </div>
    <div class="panel-body">
        <span>Location: @Model.Text</span>
        <span>Cuisine: @Model.Text</span>
    </div>
    <div class="panel-footer">
        <a class="btn btn-lg"
           asp-page="./Detail"
           asp-route-Id="@Model.Id">
            <i class="glyphicon glyphicon-zoom-in"></i>
        </a>
        <a class="btn btn-lg"
           asp-page="./Edit"
           asp-route-Id="@Model.Id">
            <i class="glyphicon glyphicon-edit"></i>
        </a>
        <a class="btn btn-lg"
           asp-page="./Delete"
           asp-route-Id="@Model.Id">
            <i class="glyphicon glyphicon-trash"></i>
        </a>
    </div>

</div>