@page
@model LanguageTutor.Web.Pages.L1.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>LanguageText</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LanguageText.Id" />
            <div class="form-group">
                <label asp-for="LanguageText.Text" class="control-label"></label>
                <input asp-for="LanguageText.Text" class="form-control" />
                <span asp-validation-for="LanguageText.Text" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LanguageText.EnglishTranslation" class="control-label"></label>
                <input asp-for="LanguageText.EnglishTranslation" class="form-control" />
                <span asp-validation-for="LanguageText.EnglishTranslation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LanguageText.Pronunciation" class="control-label"></label>
                <input asp-for="LanguageText.Pronunciation" class="form-control" />
                <span asp-validation-for="LanguageText.Pronunciation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LanguageText.Usecases" class="control-label"></label>
                <input asp-for="LanguageText.Usecases" class="form-control" />
                <span asp-validation-for="LanguageText.Usecases" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LanguageText.LanguageType" class="control-label"></label>
                <select asp-for="LanguageText.LanguageType" class="form-control"></select>
                <span asp-validation-for="LanguageText.LanguageType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
