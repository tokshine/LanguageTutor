@page
@model LanguageTutor.Web.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<div class="row">
    <div class="col-md-4 col-md-offset-4">  @*4 columns for this form leaving 4 columns from the left*@
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="loginViewModel.Username">Username</label>
                <input asp-for="loginViewModel.Username" class="form-control" />
                <span asp-validation-for="loginViewModel.Username" class="text-warning"></span>
            </div>
            <div class="form-group">
                <label asp-for="loginViewModel.Password">Password</label>
                <input asp-for="loginViewModel.Password" type="password" class="form-control" />
                <span asp-validation-for="loginViewModel.Password" class="text-warning"></span>
            </div>
            <div class="form-group">
                <div class="form-check">
                    <input asp-for="loginViewModel.RememberMe" type="checkbox" class="form-check-input" />
                    <label asp-for="loginViewModel.RememberMe" class="form-check-label">Remember Me?</label>
                </div>
                <span asp-validation-for="loginViewModel.RememberMe" class="text-warning"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}